<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="AI Insights"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textColor="@color/colorTextPrimary" />

            <!-- Metrics Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorPlaceholderText"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Performance Score"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/colorTextPrimary" />

                    <!-- Intensity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Intensity"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/colorTextSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/10"
                                android:textAppearance="?attr/textAppearanceLabelLarge"
                                android:textColor="@color/colorTextPrimary" />
                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="80"
                            app:indicatorColor="@color/colorAccent"
                            app:trackColor="@color/colorPlaceholderText"
                            app:trackCornerRadius="4dp" />
                    </LinearLayout>

                    <!-- Commitment -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Commitment"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/colorTextSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9/10"
                                android:textAppearance="?attr/textAppearanceLabelLarge"
                                android:textColor="@color/colorTextPrimary" />
                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="90"
                            app:indicatorColor="@color/colorAccent"
                            app:trackColor="@color/colorPlaceholderText"
                            app:trackCornerRadius="4dp" />
                    </LinearLayout>

                    <!-- Strength Progress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Strength Progress"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/colorTextSecondary" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="70"
                                app:indicatorColor="@color/colorAccent"
                                app:indicatorSize="120dp"
                                app:trackColor="@color/colorPlaceholderText"
                                app:trackCornerRadius="8dp"
                                app:trackThickness="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="50%"
                                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                                android:textColor="@color/colorTextPrimary" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Weight Progress"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/colorTextSecondary" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="40"
                                app:indicatorColor="@color/colorAccent"
                                app:indicatorSize="120dp"
                                app:trackColor="@color/colorPlaceholderText"
                                app:trackCornerRadius="8dp"
                                app:trackThickness="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="40%"
                                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                                android:textColor="@color/colorTextPrimary" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Suggestion Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorPlaceholderText"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="AI Icon"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="@color/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Suggestion"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@color/colorTextPrimary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Great consistency this week! To improve your strength progress, try increasing the weight on your compound lifts by 5% next session."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Calorie Suggestion Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorPlaceholderText"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Suggested Day Calories"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/colorTextPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2,450"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceDisplayLarge"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>